{
  "name": "readlog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "check-format": "biome format ./app",
    "check-types": "tsc",
    "dev": "remix dev --manual -c \"pnpm start\"",
    "format": "biome format --write ./app",
    "lint": "biome check ./app",
    "pages:deploy": "pnpm run build && wrangler pages deploy ./public",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public",
    "test": "playwright test",
    "test:dev": "playwright test --ui",
    "typecheck": "tsc",
    "validate": "pnpm check-types && pnpm check-format && pnpm lint"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.0.1",
    "@remix-run/cloudflare-pages": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "isbot": "^3.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "@cloudflare/workers-types": "^4.20230922.0",
    "@playwright/test": "^1.38.1",
    "@remix-run/dev": "^2.0.1",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.7",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "wrangler": "3.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}